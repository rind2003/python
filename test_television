import pytest
from television import *


class Test:
    def setup_method(self):
        self.tvl = Television()


    def teardown_method(self):
        del self.tvl

    def test_init(self): 
        assert self.tvi.__str__() == 'Power = False, Channel = 0, Volume = 0'


    def test_power(self):
        self.tvl.power() 
        assert self.tvl.__str__() == 'Power = True, Channel = 0, Volume = O'
        
        self.tvl.power() 
        assert self.tvl.__str__() == 'Power = False, Channel = 0, Volume = 0'

    def  test_mute(self): 
        self.tvl.mute()
        assert str(self.tvl) == 'Power: Off, Channel: 0, Volume: 0'

        self.tvl.power()
        self.tvl.volume_up()
        self.tvl.mute()
        assert str(self.tvl) == 'Power: On, Channel: 0, Volume: 0'

        self.tvl.mute()
        assert str(self.tvl) == 'Power: On, Channel: 0, Volume: 1'

    def test_channel_up(self):
        self.tvl.channel_up()
        assert self.tvl.__str__() == 'Power = False, Channel = 0, Volume = 0'

        self.tvl.power()
        self.tvl.channel_up() 
        assert self.tvl.__str__() == 'Power = True, Channel = 1, Volume = 0'

        self.tvl.channel_up()
        self.tvl.channel_up()
        self.tvl.channel_up()
        assert self.tvl.__str__() == 'Power = True, Channel = 0, Volume = 0'
        
    def test_channel_down(self): 
        self.tvl.channel_down()
        assert str(self.tvl) == 'Power: Off, Channel: 0, Volume: 0'


        self.tvl.power()
        self.tvl.channel_down()
        assert str(self.tvl) == 'Power: On, Channel: 3, Volume: 0'

    def test_volume_up_function(self):

        self.tvl.volume_up()
        assert str(self.tvl) == 'Power: Off, Channel: 0, Volume: 0'


        self.tvl.power()
        self.tvl.volume_up()
        assert str(self.tvl) == 'Power: On, Channel: 0, Volume: 1'


        self.tvl.volume_up()
        self.tvl.volume_up()
        assert str(self.tvl) == 'Power: On, Channel: 0, Volume: 2'

        self.tvl.mute()
        self.tvl.volume_up()
        assert str(self.tvl) == 'Power: On, Channel: 0, Volume: 1'

    def test_volume_down_function(self):

        self.tvl.volume_down()
        assert str(self.tvl) == 'Power: Off, Channel: 0, Volume: 0'

        self.tvl.power()
        self.tvl.volume_up()
        self.tvl.volume_down()
        assert str(self.tvl) == 'Power: On, Channel: 0, Volume: 0'

        self.tvl.mute()
        self.tvl.volume_down()
        assert str(self.tvl) == 'Power: On, Channel: 0, Volume: 0'